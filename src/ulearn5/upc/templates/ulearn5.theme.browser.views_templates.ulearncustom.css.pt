#formfield-form-widgets-terms span.label:after {
    color: #a62e1f;
    content: "*";
    top: .35em;
    position: relative;
    font-size: 150%;
    line-height: 0;
    margin-left: 5px;
}

a#file_owncloud_edit {
    float: right;
    background-color: #007BC0;
    color: white;
    padding: 10px;
    margin-top: -40px;
}

.template-login_form,
.template-logged_out,
.template-login_failed {
	background: url(++theme++ulearn5.upc/assets/images/background-login.jpg) no-repeat center center fixed;
	-webkit-background-size: cover;
	-moz-background-size: cover;
	-o-background-size: cover;
	background-size: cover;
	height: 100%;
}
